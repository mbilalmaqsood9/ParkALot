<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVehicleFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Vehicle"
        android:textColor="@color/green_primary"
        android:textSize="35dp"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/editTextVehicleMakeModel"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Vehicle Make And Model"
        android:textColorHint="@color/green_primary_light"
        android:textStyle="bold"
        android:textColor="@color/green_primary"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/forget"/>

    <EditText
        android:id="@+id/editTextVehicleColor"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Color"
        android:textColorHint="@color/green_primary_light"
        android:textStyle="bold"
        android:textColor="@color/green_primary"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/forget"/>

    <EditText
        android:id="@+id/editTextVehicleRegistrationNumber"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Registration Number"
        android:textColorHint="@color/green_primary_light"
        android:textStyle="bold"
        android:textColor="@color/green_primary"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/forget"/>




    <Button
        android:id="@+id/buttonAddVehicle"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Add Vehicle"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        />



</LinearLayout>